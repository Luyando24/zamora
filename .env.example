# Environment Variables Template for Zamora Hotel Management System
# Copy this file to .env.local and fill in your values

# ========================================
# Supabase Configuration
# ========================================
NEXT_PUBLIC_SUPABASE_URL=your-project-url.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# CRITICAL: Service Role Key (Server-side only, never expose to client)
# This key has full database access - keep it secret!
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ========================================
# Application Configuration
# ========================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# ========================================
# Mobile Money Integration
# ========================================

# MTN MoMo Configuration
MTN_MOMO_SUBSCRIPTION_KEY=your-mtn-subscription-key
MTN_MOMO_API_USER=your-api-user
MTN_MOMO_API_KEY=your-api-key
MTN_MOMO_ENVIRONMENT=sandbox

# Airtel Money Configuration
AIRTEL_CLIENT_ID=your-airtel-client-id
AIRTEL_CLIENT_SECRET=your-airtel-client-secret
AIRTEL_ENVIRONMENT=sandbox

# ========================================
# Webhook Configuration
# ========================================

# Mobile Money Webhook Secret (for HMAC signature verification)
MOMO_WEBHOOK_SECRET=your-webhook-secret-change-this

# Webhook IP Whitelist (comma-separated)
# Leave empty to allow all IPs (not recommended for production)
MOMO_WEBHOOK_IP_WHITELIST=

# ========================================
# ZRA Integration
# ========================================

# ZRA VSDC Configuration
ZRA_HOTEL_TPIN=1000000000
ZRA_VSDC_API_URL=https://vsdc.zra.org.zm/api
ZRA_VSDC_API_KEY=your-zra-api-key
ZRA_DEVICE_ID=your-device-id

# ========================================
# Rate Limiting (Optional - for production with Redis)
# ========================================

# Upstash Redis URL (for distributed rate limiting)
# UPSTASH_REDIS_REST_URL=
# UPSTASH_REDIS_REST_TOKEN=

# OR Vercel KV (if using Vercel KV)
# KV_REST_API_URL=
# KV_REST_API_TOKEN=

# ========================================
# Monitoring & Logging (Optional)
# ========================================

# Sentry DSN (for error tracking)
# NEXT_PUBLIC_SENTRY_DSN=

# LogDNA/Axiom (for structured logging)
# AXIOM_TOKEN=
# AXIOM_DATASET=

# ========================================
# Email/SMS Notifications (Optional)
# ========================================

# SendGrid
# SENDGRID_API_KEY=

# Twilio (for SMS)
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=
# TWILIO_PHONE_NUMBER=

# ========================================
# Security
# ========================================

# Session Secret (for secure cookies)
SESSION_SECRET=your-random-session-secret-change-this

# API Rate Limit Bypass Key (for testing)
# RATE_LIMIT_BYPASS_KEY=
